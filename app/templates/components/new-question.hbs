<div>
  <form  {{action 'saveQuestion' on="submit"}}>
    <div class="form-group">
      <label for="question">Question</label>
      {{input value=question id="question" required=true}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" required=true}}
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" required=true}}
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      {{textarea value=content id="content" required=true}}
    </div>
    <button type="submit">Save</button>
  </form>
</div>
