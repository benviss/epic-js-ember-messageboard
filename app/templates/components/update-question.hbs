{{#if updateQuestionForm}}
  <h4>Update</h4>
    <form>
      <div class="form-group">
        <label for="title">Question</label>
        {{input id="title" value=question.title}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input id="author" value=question.author}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input id="date" value=question.date}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{textarea id="content" value=question.content}}
      </div>
      <button {{action 'update' question}}>Save</button>
    </form>
{{else}}
<button {{action 'updateQuestionForm'}}>Edit</button>
<button {{action 'delete' question}}>Delete</button>
{{/if}}
