<div class="row">
  <div class="col-md-1">
    <button {{action 'upVote' answer}}name="button">Up</button>
    <span class="votes">{{answer.votes}}</span>
    <button {{action 'downVote' answer}}name="button">Down</button>
  </div>
  <div class="col-md-11">
    {{answer.author}}
    <br>
    {{answer.content}}
    <br>
  </div>
</div>
{{update-answer answer=answer destroyAnswer='destroyAnswer' updateAnswer='updateAnswer'}}
